{
	"name": "C++",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
    "vscode": {
      "extensions": ["llvm-vs-code-extensions.vscode-clangd", "ms-vscode.cpptools", "ms-vscode.cpptools-extension-pack"]
    }
  },
	"runArgs": ["--ulimit=nofile=1024:8192"]
}
